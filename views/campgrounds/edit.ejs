<%include ../partials/header %>


<div class="container">
     <h1 style="text-align: center">Edit Campground <%=campground.name%></h1>
    <div style="width :30%; margin: 25px auto;">
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST"><!--this will get us to app.post(/campgrounds............)-->
       <div class="form-group">
          <input class="form-control form-control-lg" type="text" name="campground[name]" placeholder="Name" value="<%=campground.name%>">
       </div>
        <div class="form-group">
          <input class="form-control form-control-lg" type="number" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
       </div>
       <div class="form-group">
          <input class="form-control form-control-lg" type="text" name="campground[image]" placeholder="Image URL" value="<%=campground.image%>">
       </div>
       <div class="form-group">
          <input class="form-control form-control-lg" type="text" name="campground[description]" placeholder="Description" value="<%=campground.description%>">
       </div>
       <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
       </div>
       <a href="/campgrounds">Go Back!</a>
    </form>
    
   </div>
 </div>





<%include ../partials/footer%>